include ../../views/helpers/mixins
footer.footer 
   .container 
      .footer__content
         .footer__information.information 
            .information__head КАТАЛОГ
            ul.information__list 
               li.information__item Дымоходы
               li.information__item Дымососы
               li.information__item Печи для дома
               li.information__item Печи для бани
               li.information__item Камины
               li.information__item Силикат кальция
               li.information__item Котлы
               li.information__item Ещё
         .footer__catalog.catalog
            .catalog__head ИНФОРМАЦИЯ
            ul.catalog__list 
               li.catalog__item Каталог
               li.catalog__item Установка и монтаж
               li.catalog__item Отзывы
               li.catalog__item Ликвидация товара
               li.catalog__item Полезное
               li.catalog__item Контакты
               li.catalog__item Оплата и доставка
         .footer__time.time 
            .time__head ВРЕМЯ РАБОТЫ
            .time__shedule.shedule 
               .shedule__image
                  img(src="../assets/images/footer/clock.svg", alt="clock")
               .shedule__clock пн-пт   
                  span  9:00 – 20:00 
                  |  сб-вс  
                  span 10:00 – 18:00
            .time__location.location
               .location__image 
                  img(src="../assets/images/footer/location.svg", alt="location")
               .location__text Санкт - Петербург ,ул. Тамбасова д.7
            +social(class='footer-social')
               


